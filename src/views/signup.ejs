<div class="auth-layout">
    <div class="auth-branding-panel">
        <div class="brand-logo">
            <img src="/images/sportime-scheduler-logo.png" alt="Sportime Scheduler Logo" class="img-fluid"
                style="width: 150px;">
        </div>
        <div class="brand-text">
            <h1>Join<br>Sport Scheduler!</h1>
            <p>The best place to organize and join sports sessions with ease. Find a game near you or create your own.
            </p>
        </div>
    </div>
    <div class="auth-form-panel">
        <div class="auth-form-container">
            <h2>Create Your Account</h2>
            
            <% if (locals.error) { %>
                <div class="alert alert-danger">
                    <%= error %>
                </div>
                <% } %>

                    <form action="/signup" method="POST">
                        <div class="mb-3">
                            <label for="name" class="form-label">Full Name</label>
                            <input type="text" class="form-control" name="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" name="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <div class="input-group">
                                <input type="password" class="form-control" name="password" required>
                                <button class="btn btn-outline-secondary password-toggle-btn" type="button">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                        </div>
                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-dark">Sign Up Now</button>
                             <p class="mb-4 text-muted">Already have an account? <a href="/login">Login here.</a></p>
                        </div>
                    </form>
        </div>
    </div>
</div>
