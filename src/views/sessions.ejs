<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1>Available Sessions</h1>
        <p class="lead">Here is a list of all upcoming sports sessions you can join.</p>
    </div>
    <a href="/sessions/new" class="btn btn-primary">Create New Session</a>
</div>
<hr>

<% if (typeof error !=='undefined' && error) { %>
    <div class="alert alert-danger">
        <%= error %>
    </div>
    <% } %>

        <% if (sessions.length===0) { %>
            <div class="alert alert-info">There are no available sessions right now. Why not create one?</div>
            <% } else { %>
                <div class="row">
                    <% sessions.forEach(session=> { %>
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 shadow-sm session-card">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">
                                        <%= session.Sport.name %>
                                    </h5>
                                    <h6 class="card-subtitle mb-2 text-muted">
                                        <%= session.venue %>
                                    </h6>
                                    <p class="card-text">
                                        <strong>Date:</strong>
                                        <%= new Date(session.scheduled_at).toLocaleDateString('en-US', {
                                            weekday: 'short' , year: 'numeric' , month: 'short' , day: 'numeric' }) %>
                                            <br>
                                            <strong>Time:</strong>
                                            <%= new Date(session.scheduled_at).toLocaleTimeString([], {hour: '2-digit' ,
                                                minute:'2-digit'}) %><br>
                                                <strong>Creator:</strong>
                                                <%= session.Creator.name %>
                                    </p>

                                    <div class="mb-3">
                                        <strong class="small">Who's In:</strong><br>
                                        <% if (session.Participants.length> 0) { %>
                                            <% session.Participants.forEach(p=> { %>
                                                <span class="avatar" title="<%= p.name %>">
                                                    <%= p.name.split(' ').map(n => n[0]).join('').toUpperCase() %>
                                    </span>
                                <% }) %>
                            <% } else { %>
                                <span class="text-muted small">No one yet. Be the first!</span>
                            <% } %>
                        </div>
                        <div class="mt-auto pt-3">
                            <% const spotsLeft = session.players_needed - session.Participants.length; %>
                            <% const isParticipant = session.Participants.some(p => p.id === user.id); %>
                            
                            <%
                                let badgeClass = ' bg-success'; if (spotsLeft <=session.players_needed / 2)
                                                        badgeClass='bg-warning text-dark' ; if (spotsLeft <=2)
                                                        badgeClass='bg-danger' ; %>
                                                        <p class="mb-2">
                                                            <span class="badge <%= badgeClass %>">
                                                                <%= spotsLeft %> spot<%= spotsLeft !==1 ? 's' : '' %>
                                                                        left
                                                            </span>
                                                        </p>
                                                        <% if (session.creator_id===user.id) { %>
                                                            <a href="/sessions/<%= session.id %>/cancel"
                                                                class="btn btn-sm btn-outline-danger w-100">Cancel
                                                                Session</a>
                                                            <% } else if (isParticipant) { %>
                                                                <button class="btn btn-sm btn-success w-100"
                                                                    disabled>Joined</button>
                                                                <% } else if (spotsLeft> 0) { %>
                                                                    <form action="/sessions/<%= session.id %>/join"
                                                                        method="POST" class="d-grid">
                                                                        <button type="submit"
                                                                            class="btn btn-sm btn-primary">Join
                                                                            Session</button>
                                                                    </form>
                                                                    <% } else { %>
                                                                        <button class="btn btn-sm btn-secondary w-100"
                                                                            disabled>Session Full</button>
                                                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>
                <% } %>