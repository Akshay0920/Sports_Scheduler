<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sport Scheduler - <%= typeof title !=='undefined' ? title : 'Welcome' %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body class="<%= (title === 'Login' || title === 'Sign Up') ? 'auth-page-body' : '' %>">
    <% if (title==='Login' || title==='Sign Up' ) { %>
        <%- body %>
            <% } else { %>
                <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="/sessions">Sport Scheduler</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#main-nav">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="main-nav">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <% if (typeof user !=='undefined' && user) { %>
                                    <li class="nav-item"><a class="nav-link" href="/sessions">All Sessions</a></li>
                                    <li class="nav-item"><a class="nav-link" href="/my-sessions">My Joined</a></li>
                                    <li class="nav-item"><a class="nav-link" href="/my-created-sessions">Created by
                                            Me</a></li>
                                    <% if (user.role==='admin' ) { %>
                                        <li class="nav-item dropdown">
                                            <a class="nav-link dropdown-toggle" href="#" role="button"
                                                data-bs-toggle="dropdown">Admin</a>
                                            <ul class="dropdown-menu dropdown-menu-dark">
                                                <li><a class="dropdown-item" href="/admin/create-sport">Create New
                                                        Sport</a></li>
                                                <li><a class="dropdown-item" href="/admin/reports">View Reports</a></li>
                                            </ul>
                                        </li>
                                        <% } %>
                                            <% } %>
                            </ul>
                            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                                <% if (typeof user !=='undefined' && user) { %>
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" role="button"
                                            data-bs-toggle="dropdown">Welcome, <%= user.name %></a>
                                        <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end">
                                            <li><a class="dropdown-item" href="/profile">Profile</a></li>
                                            <li>
                                                <hr class="dropdown-divider">
                                            </li>
                                            <li><a class="dropdown-item" href="/logout">Logout</a></li>
                                        </ul>
                                    </li>
                                    <% } else { %>
                                        <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
                                        <li class="nav-item"><a class="nav-link" href="/signup">Sign Up</a></li>
                                        <% } %>
                            </ul>
                        </div>
                    </div>
                </nav>
                <main class="container my-4 main-content-card">
                    <%- body %>
                </main>
                <% } %>

                    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

                    <script>
                        document.addEventListener('DOMContentLoaded', function () {
                            const toggleButtons = document.querySelectorAll('.password-toggle-btn');
                            toggleButtons.forEach(button => {
                                button.addEventListener('click', function () {
                                    const passwordInput = this.parentElement.querySelector('input');
                                    const icon = this.querySelector('i');
                                    if (passwordInput.type === 'password') {
                                        passwordInput.type = 'text';
                                        icon.classList.remove('bi-eye');
                                        icon.classList.add('bi-eye-slash');
                                    } else {
                                        passwordInput.type = 'password';
                                        icon.classList.remove('bi-eye-slash');
                                        icon.classList.add('bi-eye');
                                    }
                                });
                            });
                        });
                    </script>
</body>

</html>