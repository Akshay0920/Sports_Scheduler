<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1>My Joined Sessions</h1>
        <p class="lead">Here is a list of sessions you've joined.</p>
    </div>
    <a href="/sessions" class="btn btn-secondary">View All Sessions</a>
</div>
<hr>

<% if (typeof error !=='undefined' && error) { %>
    <div class="alert alert-danger">
        <%= error %>
    </div>
    <% } %>

        <% if (sessions.length===0) { %>
            <div class="alert alert-info">You haven't joined any sessions yet.</div>
            <% } else { %>
                <div class="row">
                    <% sessions.forEach(session=> { %>
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 shadow-sm session-card">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">
                                        <%= session.Sport.name %>
                                    </h5>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>
                <% } %>